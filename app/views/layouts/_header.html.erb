<% if @current_user %>
<%= @current_user.login %>
<%= link_to "profile" , account_path %> |
<%= link_to "logout" , logout_path %>
<%= gravatar_for @current_user.email, :size => 30 %>
<% else %>
<%= link_to "Register", new_user_path %> | <%= link_to "login" , login_path %> |
<%= link_to "Forgot password", new_password_reset_path %>
<% end %>